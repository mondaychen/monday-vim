[user]
  name = mondaychen
  email = monday.chen@gmail.com
[alias]
  ca = commit --all
  fa = fetch --all
  fu = fetch upstream
  po = push origin
  co = checkout
  st = status
  rh = reset --hard
  graf = log --graph --oneline --decorate --color=auto
  sub = submodule update --recursive
  hide = update-index --assume-unchanged
  unhide = update-index --no-assume-unchanged
	up = !git fetch && git rebase --autostash FETCH_HEAD
	please = push --force-with-lease
[credential]
	helper = osxkeychain
[core]
  editor = /usr/bin/vim
[color]
  ui = true
